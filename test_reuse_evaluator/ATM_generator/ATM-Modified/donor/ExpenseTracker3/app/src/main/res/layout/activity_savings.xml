<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SavingsActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:text="SAVINGS"
        android:textSize="20sp"
        />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:max="1000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:weightSum="1"
        android:gravity="center_horizontal">


        <EditText
            android:id="@+id/editText"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:weightSum="1"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/dailyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Daily: "
            android:layout_weight="0.2"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/dailyAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$ 50"
            android:layout_weight="0.25"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/monthlyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Monthly: "
            android:layout_weight="0.2"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/monthlyAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$ 1500"
            android:layout_weight="0.3"
            android:gravity="left"
            />
    </LinearLayout>



    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.05"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/weeklyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right"
            android:paddingLeft="15dp"
            android:text="Weekly: " />
        <TextView
            android:id="@+id/weeklyAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$ 350"
            android:layout_weight="0.25"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/yearlyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Yearly: "
            android:layout_weight="0.2"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/yearlyAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$ 15000"
            android:layout_weight="0.3"
            android:gravity="left"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="bottom|center"
        android:text="TOTAL SAVED"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalSavedText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="$ 12351.21"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_weight="0.25"
        android:weightSum="1">


        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Reset" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Button" />
    </LinearLayout>
</LinearLayout>
