<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/note_item_$_parent"
                android:background="@drawable/shadow_note_row_select"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

    <View
            android:id="@+id/note_item_$_color_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:background="#FF0000"
            />

    <TextView
            android:id="@+id/note_item_$_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Large Text"
            android:maxLines="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/note_item_$_textview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:maxLength="10"
            android:maxLines="1"
            android:text="Medium Text"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:layout_below="@+id/note_item_$_textview_title"
            android:layout_alignParentLeft="true"
            />

    <TextView
            android:id="@+id/note_item_$_textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:text="Small Text"
            android:textColor="#777777"
            android:layout_below="@+id/note_item_$_textview_content"
            android:layout_alignParentLeft="true"
            />

    <ImageView
            android:id="@+id/note_item_$_imageview_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_lock_dark"
            android:visibility="visible"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_below="@+id/note_item_$_textview_date"
            android:layout_alignParentLeft="true"
            />


    <ImageView
            android:id="@+id/note_item_$_imageview_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_clock_dark"
            android:visibility="visible"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_below="@+id/note_item_$_textview_date"
            android:layout_toRightOf="@+id/note_item_$_imageview_lock"
            />


</RelativeLayout>