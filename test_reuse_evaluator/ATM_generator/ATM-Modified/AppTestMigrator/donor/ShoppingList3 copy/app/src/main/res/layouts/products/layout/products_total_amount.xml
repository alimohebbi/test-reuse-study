<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_total"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listPreferredItemHeight"
        android:layout_weight="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

    <TextView
            android:gravity="center_vertical"
            android:text="@string/total_amount"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/total_padding"
            android:paddingRight="@dimen/total_padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/textview_total_checked"
            android:gravity="center_vertical"
            android:text="@string/ph_total_in_shopping_cart"
            android:textColor="@color/yellow"
            android:paddingLeft="@dimen/total_padding"
            android:paddingRight="@dimen/total_padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"/>

    <TextView
            android:gravity="center_vertical"
            android:text="@string/total_amount_separator"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/textview_total_amount"
            android:gravity="center_vertical"
            android:text="@string/ph_total_amount"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/total_padding"
            android:paddingRight="@dimen/text_space_padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/textview_currency"
            android:text="@string/currency"
            android:layout_weight="0.25"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>