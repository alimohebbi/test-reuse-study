<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <LinearLayout
            android:padding="@dimen/dialog_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort_ascencing_descending"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                    android:id="@+id/radiobutton_ascending"
                    android:text="@string/sort_ascencing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/radiobutton_descending"
                    android:text="@string/sort_descending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort_by"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                    android:id="@+id/radiobutton_name"
                    android:text="@string/sort_by_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/radiobutton_store"
                    android:text="@string/sort_by_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/radiobutton_quantity"
                    android:text="@string/sort_by_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/radiobutton_price"
                    android:text="@string/sort_by_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/radiobutton_category"
                    android:text="@string/sort_by_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>
</ScrollView>