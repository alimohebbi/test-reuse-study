    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <service android:name="com.woefe.shoppinglist.shoppinglist.ShoppingListService"/>
        <activity android:label="@string/app_name" android:name="com.woefe.shoppinglist.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.woefe.shoppinglist.dialog.DirectoryChooser" android:theme="@style/AppDialogTheme"/>
        <activity android:name="com.woefe.shoppinglist.activity.SettingsActivity"/>
        <activity android:name="com.woefe.shoppinglist.activity.AboutActivity"/>
    </application>
</manifest>